<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b7cefb">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/background"
        android:background="#b7cefb"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="70dp"
            android:layout_marginBottom="30dp"
            android:text="여행하고 싶은 나라"
            android:textSize="30sp"
            />
        <Spinner
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:autofillHints="country"
            android:id="@+id/spinner1"
            android:layout_gravity="center"
            android:layout_marginBottom="35dp" />

        <View
            android:layout_width="350dp"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="#d9e6ff"
            android:layout_gravity="center"
            android:layout_margin="5dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="23dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/prev1"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/back"/>
            <ViewFlipper
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flipper"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/canada"
                    android:layout_gravity="center"/>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/spain" />
                <ImageView
                    android:layout_width="280dp"
                    android:layout_height="200dp"
                    android:src="@drawable/swiss"/>
            </ViewFlipper>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/next1"
                android:background="@android:color/transparent"
                android:src="@drawable/go"/>
        </LinearLayout>

        <TextView
            android:id="@+id/best"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="추천 드라이브"
            android:textColor="#556074"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="55dp">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/prev2"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/back"/>
            <ViewFlipper
                android:id="@+id/flipper2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/rant1_m" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/rant2_m" />
                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    app:srcCompat="@drawable/rant3_m" />
            </ViewFlipper>
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:id="@+id/next2"
                android:background="@android:color/transparent"
                android:src="@drawable/go"/>
        </LinearLayout>

        <TextView
            android:id="@+id/rent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="해외 렌트카"
            android:textColor="#556074"
            android:textSize="18sp"
            android:layout_marginBottom="30dp"/>


    </LinearLayout>
</ScrollView>